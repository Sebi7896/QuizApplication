<resources>
    <!-- Base application theme. -->
    <style name="Theme.QuizEducativ" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@color/primary_brown</item>
        <item name="ratingBarStyle">@style/CustomRatingBarTheme</item>
        <item name="chipStyle">@style/CustomChipTheme</item>
        <item name="android:progressBarStyle">@style/CustomProgressBarStyle</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="buttonStyle">@style/CustomButtonTheme</item>

    </style>

    <style name="Theme.QuizEducativ.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTitleTextAppearance">
        <item name="android:textColor">@color/primary_brown</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">roboto_medium</item>
    </style>

    <style name="CustomRatingBarTheme" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressTint">@color/light_gold</item>
        <item name="android:progressBackgroundTint">@color/black</item>

    </style>
    <style name="Theme.QuizEducativ.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomChipTheme" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:clickable">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">#FFFFF0</item>
    </style>

    <style name="CustomRadioButtonTheme" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">@color/primary_brown</item>
        <item name="buttonTint">@color/primary_brown</item>
    </style>


    <style name="CustomProgressBarStyle">
        <item name="android:background">@drawable/progress_bar_background</item>
    </style>


    <style name="CustomButtonTheme">
        <item name="backgroundTint">@color/ivory</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/warm_gray</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="NavHeaderTextViewTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>